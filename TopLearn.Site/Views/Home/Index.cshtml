@model List<TopLearn.Core.DTOs.CoursesViewModel.ShowCourseListItemViewModel>
@{
    ViewData["Title"] = "خانه";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    var PopularCourses = ViewBag.PopularCourses as List<TopLearn.Core.DTOs.CoursesViewModel.ShowCourseListItemViewModel>;
}

@section SearchBox{

    <header>
        <a href="" class="logo"><img src="~/SiteTemplate/images/logo.png"></a>
        <h1> با اساتید مجرب و کارآزموده در خودآموز تاپ لرن </h1>
        <h2> آموزش ببینید ، تجربه کسب کنید و بازار کار شوید </h2>
        <h3> با کمترین هزینه خودت یاد بگیر </h3>
    </header>
    <div class="search-form">
        <form action="/course" method="get">
            <input type="text" id="autoFilter" name="filter" placeholder="چی دوست داری یاد بگیری ؟">
            <button><i class="zmdi zmdi-search"></i></button>
        </form>
    </div>
}
<main id="home-page">
    <div class="container">
        <section class="terms-items">
            <header>
                <h2> آخرین دوره های تاپ لرن </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                <!-- col -->
                @foreach (var item in Model)
                {
                    <partial name="_boxCourse" model="@item"/>
                }

                <!-- /col -->
                <!-- col -->
                <!-- /col -->
            </div>
        </section>

        <hr>

        <section class="terms-items">
            <header>
                <h2> دوره های محبوب تاپ لرن </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            @foreach (var item in PopularCourses)
            {
                <partial name="_boxCourse" model="item" />

            }
        </section>
    </div>
</main>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#autoFilter").autocomplete({
                source: "api/courseApi/search"
            });
        });
    </script>
}

