@page
@model TopLearn.Site.Pages.Groupes.IndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست گروه ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست گروه های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="AddGroupe" class="btn btn-outline btn-success">افزودن گروه جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام گروه</th>
                                    <th>زیر گروه ها</th>

                                    <th>دستورات</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Groupes.Where(p => p.ParentID == null))
                                {
                                    <tr>
                                        <td>@item.GroupeTitle</td>

                                        <td>
                                            <ul>
                                                @foreach (var sub in Model.Groupes.Where(p => p.ParentID == item.GroupeID))
                                                {
                                                    <li>
                                                        @sub.GroupeTitle--
                                                        <a href="/admin/Groupes/EditGroupe/@sub.GroupeID" class="btn btn-outline btn-warning btn-xs">
                                                            ویرایش
                                                        </a>--
                                                        <a href="/admin/Groupes/removeGroupe/@sub.GroupeID" class="btn btn-outline btn-danger btn-xs">
                                                            حذف
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </td>
                                        <td>

                                            <a href="/admin/Groupes/editGroupe/@item.GroupeID" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="/admin/Groupes/removeGroupe/@item.GroupeID" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                            <a href="/admin/Groupes/AddGroupe/@item.GroupeID" class="btn btn-info btn-sm">
                                                افزودن زیر گروه
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><div class="row">

                        </div>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>