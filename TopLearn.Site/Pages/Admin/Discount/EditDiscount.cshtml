@page "{id}"
@model TopLearn.Site.Pages.Admin.Discount.EditDiscountModel
@{
}
@using TopLearn.Core.Convertors
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> ویرایش کد </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Discount.DiscountID" />


        <div class="form-group">
            <label>کد تخفیف </label>
            <input type="text" asp-for="Discount.DiscountCode" readonly class="form-control">
            <span asp-validation-for="Discount.DiscountCode"></span>
            <div id="alertCode" class="alert alert-danger" style="display: none">
                <p class="text-muted">کد وارد شده معتبر نمی باشد</p>
            </div>
        </div>
        <div class="form-group">
            <label>درصد کد تخفیف </label>
            <input type="number" asp-for="Discount.DiscountPercent" class="form-control">
            <span asp-validation-for="Discount.DiscountPercent"></span>

        </div>
        <div class="form-group">
            <label>تعداد </label>
            <input type="number" asp-for="Discount.UsableCount" class="form-control">
        </div>
        <div class="form-group">
            <label>تاریخ شروع </label>
            <input id="stDate" name="stDate" value="@Model.Discount.StartDate?.ToShamsi().ToString()" />
        </div>
        <div class="form-group">
            <label>تاریخ پایان </label>
            <input id="edDate" name="edDate" value="@Model.Discount.EndDate?.ToShamsi().ToString()" />
        </div>
        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />

    </form>
</div>

@section Scripts
{

    <script>
    $("#Discount_DiscountCode").blur(function () {

            $.ajax({
                type: "get",
                url: "/Admin/Discount/AddDiscount/CheckCode?code=" + $("#Discount_DiscountCode").val()
            }).done(function (res) {
                if (res === 'True') {
                    $("#alertCode").show();
                } else {
                    $("#alertCode").hide();
                }
            });

        });</script>

    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />

    <script src="/AdminTemplate/js/kendo.all.min.js"></script>
    <script>
        // create DatePicker from input HTML element
        $("#stDate").kendoDatePicker();
        $("#edDate").kendoDatePicker();
    </script>


}
